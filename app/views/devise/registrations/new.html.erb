<h2 class="center-text mb-4">Create and account</h2>
<div class="sign_in_container">
  <span class="overline mb-1">Continue with</span>
  <%- if devise_mapping.omniauthable? %>
    <%- resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "#{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "button button--secondary button--sm mb-1" %>
      <% end %>
    <span class="overline mb-4">OR</span>
  <% end %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="field mb-4">
      <%= f.label :username, class:"content-xs overline" %>
      <div class="field__container">
        <%= f.text_field :username, autofocus: true, autocomplete: "email", placeholder: "example", class: "field__content" %>
      </div>
    </div>

    <div class="field mb-4">
      <%= f.label :email, class:"content-xs overline" %>
      <div class="field__container">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "example@mail.com", class: "field__content" %>
      </div>
    </div>

    <div class="field mb-4">
      <%= f.label :name, class:"content-xs overline" %>
      <div class="field__container">
        <%= f.text_field :name, autofocus: true, placeholder: "Example Name", class: "field__content" %>
      </div>
    </div>

    <div class="field mb-4">
      <%= f.label :avatar, class:"content-xs overline" %>
      <%= f.file_field :avatar %>
    </div>

    <div class="field mb-4">
      <%= f.label :password, class:"content-xs overline" %>
      <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %>
      <div class="field__container">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "******", class: "field__content" %>
      </div>
    </div>

    <div class="field mb-4">
      <%= f.label :password_confirmation, class:"content-xs overline" %>
      <div class="field__container">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "******", class: "field__content" %>
      </div>
    </div>

    <div class="actions mb-4">
      <%= f.submit "Sign up", class: "button button--primary button--sm mb-1" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>