<h1 class="center-text mb-4">Tweet Detail</h1>
<%= render @tweet %>

  <%# <%= link_to "Edit this tweet", edit_tweet_path(@tweet) %>
  <%# <%= link_to "Back to tweets", tweets_path %>
  <%# <%= button_to "Destroy this tweet", @tweet, method: :delete %>
<hr>
<%if current_user %>
  <%= render "reply", { tweet: Tweet.new, replied_to_id: @tweet.id} %>
<%end%>
<% if @tweet.replies.any? %>
  <% @tweet.replies.order(created_at: :desc).each do |reply| %>
    <%= render reply %>
  <% end %>
<% end %>
