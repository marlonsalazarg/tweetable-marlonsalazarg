<%= form_with(model: tweet) do |form| %>
  <% if tweet.errors.any? %>
        <div style="color: red">
          <h2><%= pluralize(tweet.errors.count, "error") %> prohibited this tweet from being saved:</h2>

          <ul>
            <% tweet.errors.each do |error| %>
              <li><%= error.full_message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>
<div class="tweet-area mb-4">
  <div>
    <%= form.text_area :body, placeholder: "Something to say about it?", class: "field__content size-textarea" %>
  </div>

  <div>
    <%= form.text_field :user_id, hidden: true %>
  </div>

  <div>
    <%= form.text_field :replied_to_id, value: replied_to_id, hidden:true %>
  </div>

  <div>
    <%= form.submit "Tweet", class: "button button--primary button--sm mb-1" %>
  </div>
</div>
<% end %>
